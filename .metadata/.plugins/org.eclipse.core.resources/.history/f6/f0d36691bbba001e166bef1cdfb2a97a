#include<stdio.h>

int main()
{
	char c;
	float r;
	float area;
	float circ;


	printf("Please enter the radius : ");
	fflush(stdin);
	fflush(stdout);
	scanf("%f",&r);
	fflush(stdin);
	fflush(stdout);
	printf("please enter your operation, a for area and b for radius :");
	fflush(stdin);
	fflush(stdout);
	scanf("%c",&c);

	if(c == 'a'){
		area = (22/7)*r*r;
		printf("area = %f",area);
	}
	elseif(c == 'b')
	{
		circ = (22/7)*2*r;
		printf("circumference is : %f",circ);
	}



	return 0;
}
